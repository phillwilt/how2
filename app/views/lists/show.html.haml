%p
  %b Title:
  = @list.title

%ol
  - @list.steps.each do |step|
    %li
      = step.body
      = link_to 'Edit', edit_list_step_path(@list, step), class: 'step-edit'
      = link_to 'Delete', list_step_path(@list, step), method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Step', new_list_step_path(@list)

= link_to 'Edit', edit_list_path(@list), class: 'list-edit'
|
= link_to 'Destroy', @list, :method => :delete, data: { :confirm => 'Are you sure?' }
|
= link_to 'Back', lists_path
